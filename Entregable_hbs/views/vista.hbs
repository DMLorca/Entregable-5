<h1>Vista de productos</h1><br>

{{#if producto}}

<table class="table">
    <thead class="table-dark">
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>
    </thead>
    <tbody>
        {{#each producto }}
        <tr class="table-primary">
            <td>{{./title }}</td>
            <td>{{./price }}</td>
            <td><img style="width: 50px; height:50px" src={{./thumbnail }} alt=""></td>
        </tr>
        {{/each }}
    </tbody>
</table>
{{else }}
<p>No hay productos</p><br>
{{/if }}
<br><a href="/"><input type="button" value="Agregar"></a>
<hr>
